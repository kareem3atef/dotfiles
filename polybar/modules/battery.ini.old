[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

label-discharging-foreground = ${colors.battery-discharging}
label-charging-foreground = ${colors.battery-charging}
label-full-foreground = ${colors.battery-full}

label-charging-background = ${colors.bg-module}
label-discharging-background = ${colors.bg-module}
label-full-background = ${colors.bg-module}


format-charging = <animation-charging> <label-charging>

format-discharging-prefix =
format-discharging-prefix-foreground = ${colors.icon}
format-discharging-background = ${colors.bg-module}
format-discharging = <ramp-capacity> <label-discharging>

format-charging-prefix =
format-charging-prefix-foreground = ${colors.icon}
format-charging-background = ${colors.bg-module}

format-full-prefix = " " 
format-full-prefix-foreground = ${colors.icon}
format-full-background = ${colors.bg-module}

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-foreground = ${colors.icon}

animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-foreground = ${colors.icon}
animation-charging-framerate = 1000

