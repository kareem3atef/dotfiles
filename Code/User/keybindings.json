[
  // TERMINAL NAVIGATION
  {
    // "key": "alt+`",
    "key": "ctrl+j",
    "command": "workbench.action.terminal.focus",
    "when": "!terminalFocus"
  },
  {
    // "key": "alt+`",
    "key": "ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },

  // suggestions
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.quickOpenNavigatePrevious",
    "when": "inQuickOpen"
  },

  // Navigation:
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "vim.active && vim.mode!='Insert' && !terminalFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "vim.active && vim.mode!='Insert' && !terminalFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "vim.active && vim.mode!='Insert' && !terminalFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "vim.active && vim.mode!='Insert' && !terminalFocus"
  },
  {
    "key": "tab",
    "command": "workbench.action.nextEditorInGroup",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "shift-tab",
    "command": "workbench.action.previousEditorInGroup",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },

  {
    "key": "alt+l",
    "command": "workbench.action.nextEditorInGroup",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.previousEditorInGroup",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "ctrl-n",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "ctrl+i",
    "command": "vim.remap",
    "when": "editorTextFocus && vim.mode == 'Insert'",
    "args": {
      "after": ["<Esc>", "^", "i"]
    }
  },
  {
    "key": "ctrl+e",
    "command": "vim.remap",
    "when": "editorTextFocus && vim.mode == 'Insert'",
    "args": {
      "after": ["<Esc>", "A"]
    }
  },

  {
    "key": "alt+a",
    "command": "workbench.action.toggleActivityBarVisibility"
  },
  {
    "key": "alt+e",
    "command": "workbench.view.explorer",
    "when": "!explorerViewletVisible"
  },
  {
    "key": "alt+e",
    "command": "workbench.action.closeSidebar",
    "when": "explorerViewletVisible"
  },

  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible   && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "c",
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && foldersViewVisible   && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "filesExplorerFocus && foldersViewVisible   && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "filesExplorerFocus && foldersViewVisible   && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && foldersViewVisible  && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && foldersViewVisible  && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "shift-a",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && foldersViewVisible   && !explorerResourceReadonly && !inputFocus"
  },
  // {
  // "key": "s",
  // "command": "explorer.openToSide",
  // "when": "filesExplorerFocus && foldersViewVisible   && !explorerResourceReadonly && !inputFocus"
  // },
  {
    "key": "shift-s",
    "command": "runCommands",
    "when": "filesExplorerFocus && foldersViewVisible   && !explorerResourceReadonly && !inputFocus",
    "args": {
      "commands": [
        "workbench.action.splitEditor",
        "explorer.openAndPassFocus",
        "workbench.action.closeOtherEditors"
      ]
    }
  },
  // {
  //   "key": "i",
  //   "command": "explorer.openAndPassFocus",
  //   "when": "filesExplorerFocus && foldersViewVisible  && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  // },

  {
    "key": "ctrl+j",
    "command": "-workbench.action.togglePanel"
  },
  {
    "key": "i",
    "command": "explorer.openToSide",
    "when": "explorerViewletFocus && filesExplorerFocus"
  },
  {
    "key": "s",
    "command": "workbench.action.splitEditorDown",
    "when": "explorerViewletFocus && filesExplorerFocus"
  },
  {
    "key": "ctrl+shift+f",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.terminal.new",
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "find . -type f | fzf --preview 'fzf-preview.sh {}' --bind 'alt-k:up,alt-j:down,esc:abort' --bind 'focus:transform-header:file --brief {}' --style=full --preview-window=right:50% --bind 'enter:execute(code {})'\u000D"
          }
        }
      ]
    }
    // "when": "!terminalFocus"
  },
  {
    "key": "f5",
    "command": "mssql.runQuery",
    "when": "editorTextFocus && editorLangId == 'sql'"
  },
  {
    "key": "ctrl+shift+e",
    "command": "-mssql.runQuery",
    "when": "editorTextFocus && editorLangId == 'sql'"
  }
  // {
  //   "key": "ctrl+shift+f",
  //   "command": "workbench.action.terminal.sendSequence",
  //   "args": {
  //     "text": "find . -type f | fzf --preview 'fzf-preview.sh {}' --bind 'alt-k:up,alt-j:down,esc:abort' --bind 'focus:transform-header:file --brief {}' --style=full --preview-window=right:50% --bind 'enter:execute(code {})'\u000D"
  //   },
  //   "when": "terminalFocus"
  // }
]
